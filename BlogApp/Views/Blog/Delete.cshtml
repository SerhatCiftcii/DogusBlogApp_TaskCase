@model BlogApp.ViewModels.BlogViewModel

<h2>Blogu Sil</h2>

<h3>Silmek istediğinize emin misiniz?</h3>
<div>
    <h4>@Html.DisplayFor(model => model.Title)</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Başlık</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Title)</dd>
        <dt class="col-sm-2">Yayın Tarihi</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.PublishDate)</dd>
        <dt class="col-sm-2">Kategori</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.CategoryName)</dd>
        <dt class="col-sm-2">Yazar</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.AuthorUsername)</dd>
        <dt class="col-sm-2">İçerik</dt>
        <dd class="col-sm-10">@Html.Raw(Model.Content)</dd>
        @if (!string.IsNullOrEmpty(Model.ImageUrl))
        {
            <dt class="col-sm-2">Görsel</dt>
            <dd class="col-sm-10"><img src="@Model.ImageUrl" alt="Blog Görseli" class="img-fluid" /></dd>
        }
    </dl>

    <form asp-action="Delete" asp-route-id="@Model.Id" method="post">
        @Html.AntiForgeryToken()
        <input type="submit" value="Sil" class="btn btn-danger" /> |
        <a asp-action="Index">Blog Listesine Dön</a>
    </form>
</div>