@using System.Security.Claims
@model List<BlogApp.ViewModels.BlogViewModel>
<h1 class="display-4 fw-bold mb-4">Bloglar</h1>

<div class="mb-4">
    <form asp-action="Index" method="get" class="row row-cols-lg-auto g-3 align-items-center">
        <div class="col-12">
            <label class="visually-hidden" for="categoryId">Kategori</label>
            <select class="form-select" id="categoryId" name="categoryId" onchange="this.form.submit()">
                <option value="">Tüm Kategoriler</option>
                @foreach (var category in ViewBag.Categories as List<BlogApp.ViewModels.CategoryViewModel>)
                {
                    <option value="@category.Id">@category.Name</option>
                    @if (ViewBag.SelectedCategoryId == category.Id)
                    {
                        <script>
                            document.getElementById('categoryId').value = '@category.Id';
                        </script>
                    }
                }
            </select>
        </div>
        <div class="col-12">
            <button type="submit" class="btn btn-outline-secondary">Filtrele</button>
        </div>
    </form>
</div>

<h2 class="fw-bold text-primary mb-3">Tüm Bloglar</h2>
@if (Model != null && Model.Any())
{
    <div class="row g-4">
        @foreach (var blog in Model)
        {
            <div class="col-12 col-md-6 col-lg-4">
                <div class="card h-100 shadow-sm border-0 rounded-3">
                    @if (!string.IsNullOrEmpty(blog.ImagePath))
                    {
                        <div class="overflow-hidden" style="height: 250px;">
                            <img src="~/@blog.ImagePath" class="card-img-top img-fluid" style="object-fit: contain; height: 100%; width: 100%;" alt="@blog.Title">
                        </div>
                    }
                    <div class="card-body d-flex flex-column p-4">
                        <h5 class="card-title fw-bold text-truncate mb-3">@blog.Title</h5>
                        <p class="card-text mb-3">@blog.Content.Substring(0, Math.Min(blog.Content.Length, 100)) ...</p>
                        <div class="mt-auto">
                            <p class="card-text mb-3">
                                <span class="fw-bold">Yazar:</span> <span class="text-muted">@blog.AuthorUsername</span> -
                                <span class="fw-bold">Kategori:</span> <span class="text-muted">@blog.CategoryName</span>
                            </p>
                            <div class="d-flex gap-2">
                                <a asp-action="Details" asp-route-id="@blog.Id" class="btn btn-primary fw-bold">Detaylar</a>
                                @if (User.Identity.IsAuthenticated && User.FindFirstValue(ClaimTypes.NameIdentifier) == blog.UserId.ToString())
                                {
                                    <a asp-action="Edit" asp-route-id="@blog.Id" class="btn btn-warning fw-bold">Düzenle</a>
                                    <a asp-action="Delete" asp-route-id="@blog.Id" class="btn btn-danger fw-bold">Sil</a>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <p class="alert alert-info">Bu kategoride henüz blog yayınlanmadı.</p>
}